@model List<Recipe>

    <h1>Welcome to CRUDelicious</h1>
    @* <a
    asp-controller="Recipes"
    asp-action="New"
    asp-route="">Add a Dish</a> *@
    @foreach (Recipe recipe in Model)
    {
        <h4><a
        asp-controller="recipes"
        asp-action="Details"
        asp-route-recipeId="@recipe.RecipeId">
        @recipe.DishName</a> by @recipe.ChefName</h4>
    }